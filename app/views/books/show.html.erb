<div class="container mt-3">
  <div class="row no-gutters">
    <div class="col-md-3">
      <%= render 'users/sidebar', user: @user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book Detail</h2>

      <table class="table">
        <tbody>
          <tr>
            <td>
              <% if @user.profile_image.attached? %>
                <%= image_tag @user.get_profile_image, size: "100x100" %>
              <% else %>
                <%= image_tag 'default-image-0.jpg', size: "100x100" %>
              <% end %>
              <br>
              <%= link_to @user.name, users_path(@user)%>
            </td>
            <td><%= link_to @book.title, book_path(@book) %></td>
            <td><%= @book.body %></td>
            
            <% if @book.user == current_user %>
            <td><%= link_to "Edit", edit_book_path(@book), class:'btn btn-sm btn-success' %></td>
            <td><%= link_to "Destroy",book_path(@book), method: :delete, class:'btn btn-sm btn-danger', "data-confirm" => "本当に消去しますか?" %></td>
            <% end %>
          </tr>
        </tbody>


      </table>
    </div>
  </div>
</div>