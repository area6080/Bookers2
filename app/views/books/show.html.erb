<div class="container mt-3">
  <div class="row no-gutters">
    <div class="col-md-3">
      <%= render 'users/sidebar', user: @user, book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book Detail</h2>
      
      <table class="table">
        <tbody>
          <tr>
            <td>
              <% if @book.user.image.attached? %>
                <%= image_tag @book.user.get_image, size: "100x100" %>
              <% else %>
                <%= image_tag 'default-image-0.jpg', size: "100x100" %>
              <% end %>
            </td>
            <td><%= link_to @book.title, book_path(@book.id) %></td>
            <td><%= @book.body %></td>
            <td><%= link_to "Edit", edit_book_path(@book.id), class:'btn btn-sm btn-success' %></td>
            <td><%= link_to "Destroy",book_path(@book.id), method: :delete, class:'btn btn-sm btn-danger' %></td>
          </tr>
        </tbody>
        

      </table>
    </div>
  </div>
</div>