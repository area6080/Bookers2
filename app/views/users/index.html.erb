<h1>Users#index</h1>

<div>
  <h2>User info</h2>
  <%= image_tag @user.get_image %>
  <!--<%= image_tag @user.get_profile_image(100,100) %>-->
  <table>
    <tbody>
      <tr>
        <td>name</td>
        <td><%= @user.name %></td>
      </tr>
      <tr>
        <td>introduction</td>
        <td><%= @user.introduction %></td>
      </tr>
    </tbody>
  </table>

  <% if @user == current_user %>
  <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>

</div>

<div>
  <h2>New Book</h2>

  <%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_field :introduction %>
  <%= f.submit 'Create Book' %>
<% end %>
</div>

<div class="main-content">
  <h1 class="headline">Books</h1>

  <table>

    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
      <tr>
        いめーじ
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book.id) %></td>
      </tr>
      <% end %>
    </tbody>

  </table>

</div>