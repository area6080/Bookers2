<div>
  <h3>Books</h3>
  <table>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= image_tag book.user.get_image, size: "100x100" %></td>
        <td><%= link_to book_path(book.id)  %></td>
        <td><%= book.introduction %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
