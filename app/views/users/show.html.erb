<div class="container mt-3">
  <div class="row no-gutters">
    <div class="col-md-3">
      <%= render 'sidebar', user: @user, book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td>
              <% if book.user.image.attached? %>
                <%= image_tag bookuser.get_image, size: "100x100" %>
              <% else %>
                <%= image_tag 'default-image-0.jpg', size: "100x100" %>
              <% end %>
            </td>
            <td><%= link_to book_path(book.id)  %></td>
            <td><%= book.introduction %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
