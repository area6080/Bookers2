<div class="container">
  <div class="row mt-3">
    <div class="col-md-6 mx-auto">
      <h2>User info</h2>
      
      <% if @user.errors.any? %>
        <h3><%= @user.errors.count %>error prohibited this obj from being saved:</h3>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <%= form_with model: @user,method: :patch do |f| %>
        <p>Name</p>
        <%= f.text_field :name, autofocus: true, class: "form-control" %><br>
        <p>Image</p>
        <%= f.file_field :image, accept: "image/*" %><br><br>
        <p>Introduction</p>
        <%= f.text_area :introduction,class: "form-control" %><br>
        <%= f.submit 'Update User', class:'btn btn-secondary' %>
      <% end %>
    </div>
  </div>
</div>
